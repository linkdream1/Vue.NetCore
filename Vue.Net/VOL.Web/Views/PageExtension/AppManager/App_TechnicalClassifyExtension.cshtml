
<script type="text/javascript">
    var fileSite = "http://114.112.54.131:9908/";
    var table = "abc";
    var uname = "bb";
    UE.Editor.prototype._bkGetActionUrl = UE.Editor.prototype.getActionUrl;
    UE.Editor.prototype.getActionUrl = function (action) {
        //var actions = ['uploadimage', 'uploadscrawl', 'uploadvideo', 'uploadfile', 'catchimage', 'listimage', 'listfile', 'config'];
        if (action == 'uploadimage') {
            return fileSite + 'UEditor/UploadImg?table=' + table + "&uname=" + uname;
        }
        if (action == 'uploadvideo') {
            return fileSite + 'UEditor/UploadVideo?table=' + table + "&uname=" + uname;
        }
        if (action == 'uploadfile') {
            return fileSite + 'UEditor/UploadFile?table=' + table + "&uname=" + uname;
        }
        else if (action == 'config') {
            return fileSite + 'UEditor/GetConfig';
        }
        else {
            return this._bkGetActionUrl.call(this, action);
        }
    }
</script>
